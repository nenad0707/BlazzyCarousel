@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="demo-container">
    <header class="demo-header">
        <div class="header-content">
            <div class="header-left">
                <img src="" @($"{Navigation.BaseUri}images/logo.png")"" alt="BlazzyCarousel Logo" class="logo-icon" />
                <span class="logo-text">BlazzyCarousel</span>
            </div>
            <div class="header-right">
                <a href="https://github.com/nenad0707/BlazzyCarousel" target="_blank" class="header-link">
                    <i class="bi bi-github"></i>
                    <span>GitHub</span>
                </a>
                <a href="https://www.nuget.org/packages/BlazzyCarousel" target="_blank" class="header-link">
                    <i class="bi bi-box-seam-fill"></i>
                    <span>NuGet</span>
                </a>
            </div>
        </div>
    </header>

    <main class="demo-main">
        @Body
    </main>

    <footer class="demo-footer">
        <div class="footer-content">
            <p class="footer-text">MIT License · © @DateTime.Now.Year Nenad Ristić</p>
            <div class="footer-social">
                <a href="https://github.com/nenad0707/BlazzyCarousel" target="_blank" class="social-link"
                    aria-label="GitHub">
                    <i class="bi bi-github"></i>
                </a>
                <a href="https://www.nuget.org/packages/BlazzyCarousel" target="_blank" class="social-link"
                    aria-label="NuGet">
                    <i class="bi bi-box-seam-fill"></i>
                </a>
                <a href="https://linkedin.com/in/nenad-ristić-27459958" target="_blank" class="social-link"
                    aria-label="LinkedIn">
                    <i class="bi bi-linkedin"></i>
                </a>
            </div>
        </div>
    </footer>
</div>