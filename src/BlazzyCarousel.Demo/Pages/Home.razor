@page "/"
@using BlazzyCarousel.Model
@using BlazzyCarousel.Models
@using BlazzyCarousel.Components
@inject IJSRuntime JS

<PageTitle>BlazzyCarousel Demo</PageTitle>

<div style="
    min-height: 100vh;
    background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 60px 20px;
">
    <h1 style="margin-bottom: 10px;">BlazzyCarousel</h1>
    <p style="margin-bottom: 40px; opacity: 0.85;">A beautiful 3D carousel with glass morphism design</p>

    <BzCarousel TItem="Movie"
                Items="items"
                Theme="BzTheme.Glass"
                 OnItemSelected="@OnItemSelected">
                @* Theme="BzTheme.Glass"
                OnItemSelected="@OnItemSelected"> *@
       @*  <ItemTemplate Context="item">
            <img src="@item.ImageUrl" alt="@item.Title" />
        </ItemTemplate> *@
    </BzCarousel>

    @if (selectedMovie != null)
    {
        <div style="text-align: center; margin-top: 30px;">
            <h3>Selected: @selectedMovie.Title</h3>
        </div>
    }
</div>

@code {
    private Movie? selectedMovie;

    private List<Movie> items = new()
    {
        new() { Title = "Despicable Me 4", ImageUrl = "images/despicableme.jpg" },
        new() { Title = "Joker", ImageUrl = "images/joker.jpg" },
        new() { Title = "The Platform 2", ImageUrl = "images/the-platform.jpg" },
        new() { Title = "The Substance", ImageUrl = "images/thesubstance.jpg" },
        new() { Title = "Venom", ImageUrl = "images/venom.jpg" },
        new() { Title = "Survive", ImageUrl = "images/survive.jpg" },
        new() { Title = "The Wild Robot", ImageUrl = "images/wild-robot.jpg" },
        new() { Title = "Deadpool & Wolverine", ImageUrl = "images/wolwerine.jpg",
        }
    };

     private  Task OnItemSelected(Movie selectedItem)
    {
        selectedMovie = selectedItem;
        Console.WriteLine($"Selected: {selectedItem.Title}");
        return Task.CompletedTask;
    }
}